{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        // Run code coverage, generate report and open it
        {
            "label": "Run code coverage, generate report and open it",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "hide": false,
            "command": "echo Finished task \"Run code coverage, generate report and open it\"",
            "type": "shell",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Run coverage calculation",
                "Run coverage report",
                "Open coverage Report"
            ],
            "problemMatcher": "$msCompile"
        },
        // Run coverage calculation
        {
            "label": "Run coverage calculation",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "hide": true,
            "type": "shell",
            "command": "activate.bat && python --version && cd ../.. && python -m coverage run -m --branch pytest",
            "options": {
                "cwd": "${workspaceFolder}/.venv311/Scripts"
            },
            "problemMatcher": {
                "owner": "python",
                "fileLocation": "autoDetect",
                "pattern": [
                    {
                        "regexp": "^.*File \\\"([^\\\"]|.*)\\\", line (\\d+).*",
                        "file": 1,
                        "line": 2
                    },
                    {
                        "regexp": "^.*raise.*$"
                    },
                    {
                        "regexp": "^\\s*(.*)\\s*$",
                        "message": 1
                    }
                ]
            }
        },
        // Run coverage report
        {
            "label": "Run coverage report",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "hide": true,
            "type": "shell",
            "command": "activate.bat && python --version && cd ../.. && python -m coverage html --show-contexts",
            "options": {
                "cwd": "${workspaceFolder}/.venv311/Scripts"
            },
            "problemMatcher": {
                "owner": "python",
                "fileLocation": "autoDetect",
                "pattern": [
                    {
                        "regexp": "^.*File \\\"([^\\\"]|.*)\\\", line (\\d+).*",
                        "file": 1,
                        "line": 2
                    },
                    {
                        "regexp": "^.*raise.*$"
                    },
                    {
                        "regexp": "^\\s*(.*)\\s*$",
                        "message": 1
                    }
                ]
            }
        },
        // Open coverage Report
        {
            "label": "Open coverage Report",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "hide": true,
            "command": "start",
            "type": "shell",
            "windows": {
                "command": "start"
            },
            "args": [
                "msedge",
                "${workspaceFolder}\\htmlcov\\index.html"
            ],
            "problemMatcher": []
        }
    ]
}